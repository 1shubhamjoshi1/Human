<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back"
    tools:context="com.jiit.minor2.shubhamjoshi.human.NavBar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shubham Joshi"
            android:textColor="#fff"
            android:layout_marginRight="20dp"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="1dp"
            android:background="#fff"
            android:layout_marginRight="20dp"
            android:layout_height="25dp"></LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ip_tag"
            android:layout_gravity="right"
            android:src="@drawable/ic_language_white_24dp"
           />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"

        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userImg"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"

            app:civ_border_width="2dp"
            app:civ_border_color="#fff"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="3dp"
        android:layout_marginTop="240dp"
        android:background="#fff"></LinearLayout>


</FrameLayout>